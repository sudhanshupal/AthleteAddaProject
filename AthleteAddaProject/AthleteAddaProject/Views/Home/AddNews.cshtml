
@{
    ViewBag.Title = "AddNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddNews</h2>
@Html.AntiForgeryToken()
<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-offset-3 col-sm-2" for="email">Title:</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="email" placeholder="Title">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-offset-3 col-sm-2" for="pwd">Content:</label>
                <div class="col-sm-5">
                    <textarea  class="form-control" placeholder="Enter content" rows="10" ></textarea>
                </div>
            </div>
            @*todo:google capcha here*@
            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-5">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>
